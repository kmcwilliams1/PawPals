<div class="columns mt-4 ml-1">
  <div class="column is-one-third my-9">
    <div class="card">
      <div class="card-image">
        <figure class="image is-4by3">
          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4">{{posts.user.username}}</p>
            {{log posts}}
            <p class="subtitle is-6">{{posts.id}}</p>
          </div>
        </div>

        <div class="content">
          <section class="card">
            <a href="/user/{{posts.id}}">
              <header>{{posts.description}}</header>
              <div class="card-body">
                {{!-- <img src="/images/{{filename}}" alt="{{description}}"> --}}
              </div>
            </a>
          </section>
        </div>