
  <div class="container">
    <textarea class="textarea" id="text-box" placeholder="What's on your mind?"></textarea>
  </div>

<!-- this is your profile -->
<div class="columns mt-4 ml-1">
  <div class="column is-one-third my-9">
    <div class="card">
      <div class="card-image">
        <figure class="image is-4by3">
          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4">John Smith</p>
            <p class="subtitle is-6">@johnsmith</p>
          </div>
        </div>

        <div class="content">
          {{bio}}
          <!--    <a>@bulmaio</a>.
                    <a href="#">#css</a> <a href="#">#responsive</a>
                    <br>
                    <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time> -->
        </div>
        <!-- bio modal -->

        <button class="edit">Button</button>
        <div class="bioModal modal">
          <div class="modal-background"></div>
          <div class="modal-card">
            <header class="modal-card-head">
              <p class="modal-card-title">Edit Profile</p>
              <button class="biodelete delete" aria-label="close"></button>
            </header>
            <div class="modal-content">
              <!-- Any other Bulma elements you want -->
              <textarea class="textarea" placeholder="Age"></textarea>
              <textarea class="textarea" placeholder="Breed"></textarea>
              <textarea class="textarea" placeholder="Favorite Toys"></textarea>
              <textarea class="textarea" placeholder="A Short Bio"></textarea>
            </div>
            <footer class="modal-card-foot">
              <button class="bio-modal-save is-success">Save changes</button>
              <button class="bio-modal-cancel">Cancel</button>
            </footer>
          </div>
        </div>

        <!-- end bio modal -->
      </div>
    </div>
  </div>

  <script src="./js/profile.js"></script>